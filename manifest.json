{
  "description": "__MSG_extDescription__",
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.0.5",
  "homepage_url": "https://github.com/ettoolong/QueryBoshiamy",
  "icons": {
    "16": "icon/logo.ico"
  },
  "applications": {
    "gecko": {
      "id": "queryBoshiamy.beta@ettoolong",
      "strict_min_version": "51.0"
    }
  },
  "developer": {
    "name": "Ett Chung",
    "url": "https://github.com/ettoolong/QueryBoshiamy"
  },
  "background": {
    "scripts": ["script/background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://boshiamy.com/*"
  ],
  "default_locale": "en",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "__MSG_extName__",
      "favicon_url": "https://boshiamy.com/favicon.ico",
      "search_url": "https://boshiamy.com/webextension/?q={searchTerms}",
      "is_default": false,
      "keyword": "boshiamy"
    }
  }
}
